<h2><%= @place.name.capitalize %></h2>

<h5>Rating: <%= @place.rating %></h5>
<h5>Info: <%= @place.info %></h5>
<h5>Location: <%= @place.location %></h5>

<h3>Comments</h3>
<% @place.comments.each do |comment| %>
     <% @comment = comment %>
     <%= render "comments/comment" %>
<% end %>

<h3>Add Comment:</h3>
<div class="container">
	<div><%= render 'comments/form' %></div>
</div>
</br>
<div><%= link_to 'Back to home page', places_path %></div>
