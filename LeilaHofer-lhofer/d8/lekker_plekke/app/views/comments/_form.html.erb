<%= form_for ([@place, @place.comments.build]) do |f| %>
	<form role="form">

		<div class="form-group">
			<%= f.label :commenter %>
			<%= f.text_field :commenter %>
		</div>
		<div class="form-group">
			<%= f.label :text %>
			<%= f.text_field :text %>
		</div>
		<p>
			<%= f.submit :class => "btn btn-default"%>
		</p>
	</form>
<% end %>
