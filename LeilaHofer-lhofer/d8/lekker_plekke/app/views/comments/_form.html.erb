<%= form_for ([@place, @place.comments.build]) do |f| %>
	<form role="form" class="form-horizontal">
		<div class = "form-group">
			<%= f.label :commenter, :class => "col-sm-offset-2 col-sm-3 text-right" %>
			<div class="col-sm-3">
				<%= f.text_field :commenter, :placeholder => "Your Name", :class => "form-control"%>
			</div>
		</div>
		</br>
		<div class = "form-group">
			<%= f.label :text, :class => "col-sm-offset-2 col-sm-3 text-right" %>
			<div class="col-sm-3">
				<%= f.text_field :text, :placeholder => "Text", :class => "form-control"%>
			</div>
		</div>
		</br>
		<div class="form-group">
			<div class = "col-sm-offset-1 col-sm-11" >
				<%= f.submit :class => "btn btn-default" %>
			</div>
		</div>
</form>
<% end %>
