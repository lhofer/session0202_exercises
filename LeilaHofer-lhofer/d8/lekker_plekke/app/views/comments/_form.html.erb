<%= form_for ([@place, @place.comments.build]) do |f| %>
	<form role="form">

		<div class = "form-group">
			<%= f.label :commenter %>
			<%= f.text_field :commenter, :placeholder => "your name", :class => "form-control" %>
		</div>
		</br>
		<div class="form-group">
			<%= f.label :text %>
			<%= f.text_field :text, :placeholder => "Comment text", :class => "form-control" %>
		</div>
		<p>
			<%= f.submit :class => "btn btn-default"%>
		</p>
	</form>
<% end %>
